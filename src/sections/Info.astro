<style>
  .twitch-link,
  svg {
    @apply text-twitch;
  }

  @supports (animation-timeline: view()) {
    svg {
      animation-timeline: view();
      animation-name: show;
      animation-timing-function: ease-in;
    }

    :not(a:hover) > .twitch-link {
      animation-timeline: view(block);
      animation-name: show;
      animation-timing-function: ease-in;
    }
  }
  @media (prefers-reduced-motion: reduce) {
    svg {
      animation-name: none;
    }
  }

  @keyframes show {
    from {
      @apply text-primary;
    }

    50% {
      @apply text-twitch;
    }

    100% {
      @apply text-twitch;
    }
  }
</style>
